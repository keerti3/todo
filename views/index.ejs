<%- include("./partials/header") %>

<nav class="navbar navbar-light bg-light">
    <div class="container-fluid">
      <a class="navbar-brand" href="#">Todo List</a>
    </div>
  </nav>
  <div class="container mt-5">
      <form action="/add/todo" method="POST" class="d-flex">
        <input type="text" name="todo" class="form-control" placeholder="Enter">
        <input type="submit" value="Add" class="btn btn-md btn-primary mx-2">
    </form>
    <ul class="list-group my-5">
        <% todo.forEach(todos =>{ %>
            <li class="list-group-item"><%= todos.todo %> <a href="/delete/todo/<%= todos._id %>" method="GET"
             class="btn btn-warning btn-sm">Delete
        </a>
        </li>
           <% }) %>
      </ul>
  </div>
  
<%- include("./partials/footer") %>